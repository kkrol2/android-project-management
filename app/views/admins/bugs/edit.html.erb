<%= form_for [:admins,@project,@bug] do |f| %>
  <% if @bug.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@bug.errors.count, "error") %> prohibited
        this bug from being saved:</h2>
    <ul>
    <% @bug.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
 
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :state %><br />
    <%= select_tag "bug[state]", options_for_select([[ "Confirmed",0],["Unconfirmed",1],["Resolved",2] ], @bug.state) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>